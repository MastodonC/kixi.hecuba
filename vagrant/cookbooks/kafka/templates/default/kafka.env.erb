#!/bin/sh
export SCALA_VERSION="<%= node[:kafka][:scala_version] %>"
export JMX_PORT="<%= @jmx_port %>"

export KAFKA_LOG4J_OPTS="-Dlog4j.configuration=file:<%= node[:kafka][:config_dir] %>/<%= @log4j_config %>"
export KAFKA_HEAP_OPTS="<%= node[:kafka][:heap_opts] %>"
export KAFKA_GC_LOG_OPTS="-Xloggc:<%= node[:kafka][:log_dir] %>/kafka-gc.log -verbose:gc -XX:+PrintGCDetails -XX:+PrintGCDateStamps -XX:+PrintGCTimeStamps"
export KAFKA_OPTS="<%= node[:kafka][:generic_opts] %>"

KAFKA_RUN="<%= node[:kafka][:install_dir] %>/bin/kafka-run-class.sh"
KAFKA_ARGS="<%= @main_class %>"
KAFKA_CONFIG="<%= node[:kafka][:config_dir] %>/<%= @config %>"
